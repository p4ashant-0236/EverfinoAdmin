<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    tools:context=".SplashActivity">

    <LinearLayout
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Everfino!"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:textSize="50dp" />

        <TextView
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="Tagline Tagline Tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="200dp"
            android:background="@drawable/design_btn_login"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="You are not a member ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15dp"
                android:textColor="@color/colorRed"
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button android:layout_height="2dp"

                android:layout_width="2dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>